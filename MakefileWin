# Master degree in Computer Science
# Universita' degli Studi di Milano

# name of the file
FILENAME = app

# Visual Studio compiler
CC = cl.exe

# Include path
IDIR = ./include

# Build path
BUILD = ./build

# compiler flags:
CCFLAGS  = /Od /Zi /EHsc /MT

# linker flags:
LFLAGS = /LIBPATH:./libs/win glfw3.lib assimp-vc143-mt.lib zlib.lib minizip.lib kubazip.lib poly2tri.lib draco.lib pugixml.lib gdi32.lib user32.lib Shell32.lib Advapi32.lib

SOURCES = ./include/glad/glad.c ./include/imgui/*.cpp ./src/*.cpp

TARGET = $(BUILD)/$(FILENAME).exe

.PHONY : all
all:
	$(CC) $(CCFLAGS) /I$(IDIR) $(SOURCES) /Fe:$(TARGET) /Fd:$(BUILD)/ /Fo:$(BUILD)/ /link $(LFLAGS) 

.PHONY : clean
clean :
	del $(TARGET)
	del *.obj *.lib *.exp *.ilk *.pdb
